{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@lib/*": ["./src/lib/*"],
      "@canvas/*": ["./src/components/canvas/*"],
      "@dom/*": ["./src/components/dom/*"],
      "@state/*": ["./src/state/*"],
      "@data/*": ["./src/data/*"],
      "@layout/*": ["./src/layout/*"],
      "@routing/*": ["./src/routing/*"],
      "@src/*": ["./src/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
